{
  "name": "libvim",
  "version": "8.10869.1",
  "description": "Standalone vim library",
  "license": "MIT",
  "scripts": {
      "test": "esy x run-tests.sh"
  },
  "esy": {
    "build": [
        ["bash", "-c", "#{os == 'windows' ? 'build/build-windows.sh' : 'build/build-posix.sh'}"]
    ],
    "buildsInSource":true,
    "exportedEnv": {
        "LIBVIM_INCLUDE_PATH": {
            "val": "#{self.install / 'include'}",
            "scope": "global"
        },
        "LIBVIM_LIB_PATH": {
            "val": "#{self.lib}",
            "scope": "global"
        }
    }
  },
  "dependencies": { }
}
